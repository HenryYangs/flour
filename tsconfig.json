{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "lib": ["es2017"],
    "outDir": "dist",
    "rootDir": ".",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "koa-mysql": ["types/koa-mysql"],
      "koa-async-validator": ["types/koa-async-validator"]
    }
  },
  "include": [
    "src",
    "index.ts",
    "types",
  ],
  "exclude": [
    "node_modules",
    "commitlint.config.js"
  ]
}